<div class="card mx-2">
  <div class="card-body">
    <h2 class="card-title">{{post.title}}</h2>
    <a href="/users/{{post.user.username}}">
      <h6 class="card-subtitle mb-2 text-muted mx-2">{{post.user.username}}</h6>
    </a>
    <div class="card-body">
      {{post.body}}
    </div>
     <p style="text-muted">Posted at: {{post.createdAt}}<p>
  </div>
</div>
{{#each comments as |comment|}}
  <div class="card mt-2 mx-5">
    <div class="card-body">
      <a href="/users/{{comment.user.username}}">
        <h5 class="card-title ml-3">{{comment.user.username}}</h5>
      </a>
      <div class="card-body">
        {{comment.body}}
      </div>
      <p style="text-muted">Posted at: {{comment.createdAt}}<p>
    </div>
  </div>
{{/each}}