{{#each posts as |post|}}
  <div class="card mt-2 mx-2">
    <h2 class="card-title mx-2">{{post.title}}</h2>
    <a href="/users/{{post.user.username}}">
      <h6 class="card-subtitle mb-2 text-muted mx-2">{{post.user.username}}</h6>
    </a>
    <div class="card-body">
      {{post.body}}
    </div>
  </div>
{{/each}}