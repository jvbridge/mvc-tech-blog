<div class="row align-center mb-5">
  <div class="col-md-6">
    <h2>{{user.username}}</h2>
  </div>
  <div class="col-md-6">
    <h3><a href="mailto:{{user.email}}">{{user.email}}</a></h3>
  </div>
</div>
<h3> Users's posts</h3>
<br />
{{#each posts as |post|}}
  <div class="row align-center mb-5">
    <div class="col-md-6">
      <h2>{{post.title}}</h2>
    </div>
    <div class="col-md-6">
      <p>{{post.body}}</p>
    </div>
  </div>
{{/each}}